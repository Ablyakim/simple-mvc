{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container" style="padding: 40px">
        <form action="/post-login" method="post" style="max-width: 300px; margin: 0 auto">
            <h2 class="form-signin-heading">Please sign in</h2>
            {% if error %}
                <div class="alert alert-danger" role="alert">{{ error }}</div>
            {% endif %}
            <label for="login">Login</label>
            <input name="login" type="text" id="login" value="{{ login }}" class="form-control" placeholder="Login"
                   required="" autofocus="">
            <label for="password">Password</label>
            <input name="password" type="password" id="password" class="form-control" placeholder="Password"
                   required="">
            <button class="btn btn-lg btn-primary btn-block" type="submit" style="margin-top: 20px">Sign in</button>
        </form>
    </div>
{% endblock %}